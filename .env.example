# Smart HVAC Monitoring System - Environment Variables
# Copy this file to .env and modify the values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_PORT=5000
SECRET_KEY=change-this-secret-key-in-production-to-something-very-secure
LOG_LEVEL=INFO

# =============================================================================
# MQTT SETTINGS
# =============================================================================
MQTT_BROKER=mosquitto
MQTT_PORT=1883
MQTT_USERNAME=hvac_user
MQTT_PASSWORD=change_this_mqtt_password
MQTT_CLIENT_ID=smart_hvac_system

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DATABASE_URL=sqlite:///database/hvac_data.db
DATABASE_ECHO=false

# =============================================================================
# SENSOR SIMULATION SETTINGS
# =============================================================================
SENSOR_COUNT=7
SIMULATION_SPEED=1
ENABLE_ANOMALY_SIMULATION=true
ANOMALY_PROBABILITY=0.05

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
# Grafana
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_this_grafana_password

# Prometheus
PROMETHEUS_PORT=9090

# AlertManager
ALERTMANAGER_PORT=9093

# Database Admin
DB_ADMIN_PORT=8080

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================
# Redis Cache
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password

# Nginx Proxy
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# SMS Notifications (Twilio example)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# ALERT THRESHOLDS
# =============================================================================
TEMP_MIN_THRESHOLD=18.0
TEMP_MAX_THRESHOLD=26.0
TEMP_CRITICAL_MIN=15.0
TEMP_CRITICAL_MAX=30.0

HUMIDITY_MIN_THRESHOLD=30.0
HUMIDITY_MAX_THRESHOLD=60.0
HUMIDITY_CRITICAL_MIN=20.0
HUMIDITY_CRITICAL_MAX=80.0

CO2_MAX_THRESHOLD=1000
CO2_CRITICAL_MAX=1500

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT Settings (if implemented)
JWT_SECRET_KEY=change-this-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# DEVELOPMENT/TESTING
# =============================================================================
# Set to true for development mode
DEVELOPMENT_MODE=false

# Test database for development
TEST_DATABASE_URL=sqlite:///database/test_hvac_data.db

# Enable debug logging
DEBUG_MQTT=false
DEBUG_DATABASE=false
DEBUG_ALERTS=false

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Worker processes for production
WORKERS=2
WORKER_CONNECTIONS=1000

# Database connection pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Cache settings
CACHE_DEFAULT_TIMEOUT=300
CACHE_REDIS_URL=redis://redis:6379/0

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_MACHINE_LEARNING=true
ENABLE_ENERGY_OPTIMIZATION=true
ENABLE_PREDICTIVE_MAINTENANCE=true
ENABLE_REAL_TIME_ALERTS=true
ENABLE_API_DOCUMENTATION=true

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Weather API (for outdoor conditions)
WEATHER_API_KEY=your_weather_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Building Management System Integration
BMS_API_ENDPOINT=https://your-bms-system.com/api
BMS_API_KEY=your_bms_api_key

# =============================================================================
# DOCKER SPECIFIC
# =============================================================================
# Container resource limits
MEMORY_LIMIT=512m
CPU_LIMIT=0.5

# Network settings
NETWORK_NAME=smart-hvac-network
SUBNET=172.20.0.0/16